<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground" >

    <EditText
        android:id="@+id/et_fgnickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_fgpwd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="请输入昵称"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/et_fgusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_fgnickname"
        android:layout_alignLeft="@+id/et_fgnickname"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:ems="10"
        android:hint=" 请输入登陆账号"
        android:textColor="@color/black" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_fgpwdconfrim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_fgpwd"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/et_fgpwd"
        android:layout_marginBottom="160dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="请再次输入新密码"
        android:inputType="textPassword"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/et_fgpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_fgpwdconfrim"
        android:layout_alignLeft="@+id/et_fgnickname"
        android:layout_alignRight="@+id/et_fgnickname"
        android:layout_marginBottom="24dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:textColor="@color/black" />

    <ProgressBar
        android:id="@+id/progressBar_fogot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/et_fgpwdconfrim"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" 
        android:visibility="gone"/>

    <Button
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_fgpwdconfrim"
        android:layout_alignRight="@+id/et_fgpwdconfrim"
        android:layout_below="@+id/progressBar1"
        android:text="忘记密码"
        android:textColor="@color/white" />

</RelativeLayout>